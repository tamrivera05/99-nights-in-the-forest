---
import logo from "../../assets/navLogo.png"

const currentPath = Astro.url.pathname;
---

<header class="absolute top-0 left-1/2 transform -translate-x-1/2 z-50 mt-4 flex w-[90%] max-w-[1200px] items-center justify-between rounded-[18px] bg-black/30 px-4 py-3 text-white shadow-[0px_5px_16px_rgba(0,0,0,0.35)] backdrop-blur-sm sm:px-6 sm:py-4 lg:px-8">
  <div class="flex items-center gap-6 sm:gap-8 lg:gap-12">
    <a href="/">
      <img src={logo.src} alt="99 Nights in the Forest Logo" class="h-[44px] w-auto object-contain sm:h-[56px] lg:h-[68px]" />
    </a>
  </div>
  <nav class="hidden items-center gap-[24px] text-[16px] font-extrabold tracking-[-0.32px] sm:flex lg:gap-[32px]">
    <a
      href="/"
      class={`leading-[32px] transition-colors hover:text-[#ff5c5c] ${
        currentPath === "/" ? "text-[#ff5c5c]" : "text-white"
      }`}
    >
      Home
    </a>
    <a
      href="/items"
      class={`leading-[32px] transition-colors hover:text-[#ff5c5c] ${
        currentPath.startsWith("/items") ? "text-[#ff5c5c]" : "text-white"
      }`}
    >
      Items
    </a>
    <a
      href="/guides"
      class={`leading-[32px] transition-colors hover:text-[#ff5c5c] ${
        currentPath.startsWith("/guides") ? "text-[#ff5c5c]" : "text-white"
      }`}
    >
      Guides
    </a>
    <a
      href="/generator"
      class={`leading-[32px] transition-colors hover:text-[#ff5c5c] ${
        currentPath === "/generator" ? "text-[#ff5c5c]" : "text-white"
      }`}
    >
      Generator
    </a>
  </nav>
  <a
    href="/generator"
    class="rounded-[8px] bg-[#950606] px-4 py-2 text-[14px] font-semibold text-white shadow-[0px_5px_10.8px_rgba(0,0,0,0.25)] sm:hidden"
  >
    Get Items
  </a>
</header>
