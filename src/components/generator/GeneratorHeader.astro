---
interface Props {
  titleSvg: string;
  ramImageSrc: string;
}

const { titleSvg, ramImageSrc }: Props = Astro.props;
---

<header class="mt-6 flex w-full items-center justify-between rounded-[18px] bg-black/30 px-6 py-4 text-white shadow-[0px_5px_16px_rgba(0,0,0,0.35)] backdrop-blur-sm sm:px-8 lg:px-12">
  <div class="flex items-center gap-6 sm:gap-8 lg:gap-12">
    <div class="relative h-[64px] w-[68px] sm:h-[78px] sm:w-[82px] lg:h-[88px] lg:w-[92px]">
      <img src={ramImageSrc} alt="99 Nights in the Forest ram icon" class="absolute inset-0 h-full w-full object-contain" />
    </div>
    <img src={titleSvg} alt="99 Nights in the Forest" class="h-[44px] w-auto object-contain sm:h-[56px] lg:h-[64px]" />
  </div>
  <nav class="hidden items-center gap-[24px] text-[16px] font-bold tracking-[-0.32px] sm:flex lg:gap-[32px]">
    <a href="/" class="leading-[32px] transition-colors hover:text-[#ff5c5c]">Home</a>
    <a href="/generator" class="leading-[32px] text-[#ff5c5c] transition-colors hover:text-white">Generator</a>
  </nav>
  <a
    href="/generator"
    class="rounded-[8px] bg-[#950606] px-4 py-2 text-[14px] font-semibold text-white shadow-[0px_5px_10.8px_rgba(0,0,0,0.25)] sm:hidden"
  >
    Generator
  </a>
</header>

