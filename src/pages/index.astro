---
import Layout from "../layouts/Layout.astro";
import backgroundImage from "../assets/backgroundImage.png";
import homepageBanner from "../assets/homepageBanner.png";
import logo from "../assets/navLogo.png";
---

<Layout
  title="Home"
  description="Claim Roblox items for survival in 99 Nights in the Forest."
  showFooter={false}
>
  <main class="relative flex min-h-screen flex-col items-center justify-center overflow-auto bg-[linear-gradient(180deg,#000f15_0%,#000000_100%)] bg-fixed px-4 pt-[110px] pb-[80px] lg:pt-[120px]">
    <div class="pointer-events-none absolute inset-0 overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,#042739_0%,#01171f_55%,#000000_100%)]" />
      <div class="absolute left-1/2 top-1/2 h-[110%] w-[110%] -translate-x-1/2 -translate-y-1/2 overflow-hidden blur-[5px]">
        <img src={backgroundImage.src} alt="" class="h-full w-full object-cover" />
      </div>
      <div class="absolute inset-0 bg-black/35" />
    </div>

    <div class="relative z-10 flex w-full max-w-[1200px] flex-1 flex-col items-center gap-6">

      <section class="flex w-full flex-1 flex-col items-center justify-center gap-4 pb-4 pt-2 sm:gap-6 lg:gap-8">
        <div class="flex items-center justify-center w-full max-w-[480px] max-h-[550px] md:max-h-[600px] lg:max-h-[800px] mx-auto sm:max-w-[560px] lg:max-w-[700px]">
          <img src={homepageBanner.src} alt="99 Nights in the Forest banner" class="w-[689px] h-[746px] object-contain" />
        </div>

        <div class="flex w-full max-w-[460px] flex-col items-center gap-4 px-4 text-white sm:gap-5">
          <div class="text-center text-[17px] font-extrabold tracking-[-0.48px] sm:text-[19px] lg:text-[20px]">
            <h1 class="leading-[28px] sm:leading-[32px] lg:leading-[34px]">99 Nights in the Forest Free Diamonds</h1>
            <p class="leading-[28px] sm:leading-[32px] lg:leading-[34px] lg:text-nowrap">
              Enter your Roblox username in the Generator page
            </p>
          </div>
          <a
            href="/generator"
            class="flex h-[52px] w-full items-center justify-center rounded-[8px] bg-[#950606] px-[16px] py-[14px] text-[16px] font-bold text-white hover:bg-[#b00a0a]"
          >
            GET FREE ITEMS
          </a>
        </div>
      </section>

      <!-- Featured Items Section -->
      <section class="w-full max-w-[1200px] mb-12">
        <h2 class="text-3xl font-bold text-white text-center mb-8">Popular Items</h2>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
          <a href="/items/diamonds" class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10 hover:bg-white/10 transition-all hover:scale-105">
            <div class="text-purple-400 font-semibold mb-2">ðŸ’Ž CURRENCY</div>
            <h3 class="text-xl font-bold text-white mb-2">Free Diamonds</h3>
            <p class="text-white/60 text-sm">Get 5,000 or 10,000 diamonds instantly</p>
          </a>
          <a href="/items/raygun" class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10 hover:bg-white/10 transition-all hover:scale-105">
            <div class="text-red-400 font-semibold mb-2">ðŸ”« WEAPON</div>
            <h3 class="text-xl font-bold text-white mb-2">Ray Gun</h3>
            <p class="text-white/60 text-sm">Advanced alien tech weapon with heavy damage</p>
          </a>
          <a href="/items/chainsaw" class="bg-white/5 backdrop-blur-sm rounded-xl p-6 border border-white/10 hover:bg-white/10 transition-all hover:scale-105">
            <div class="text-blue-400 font-semibold mb-2">ðŸ”§ TOOL</div>
            <h3 class="text-xl font-bold text-white mb-2">Chainsaw</h3>
            <p class="text-white/60 text-sm">Rapid tree cutting and defensive tool</p>
          </a>
        </div>
      </section>

      <!-- Quick Links Section -->
      <section class="w-full max-w-[1200px] mb-12">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div class="bg-gradient-to-r from-green-600/20 to-blue-600/20 backdrop-blur-sm rounded-xl p-6 border border-white/10">
            <h3 class="text-2xl font-bold text-white mb-4">ðŸ“š Game Guides</h3>
            <p class="text-white/80 mb-4">Learn survival strategies, item usage, and advanced techniques.</p>
            <a href="/guides" class="inline-flex items-center gap-2 text-green-400 hover:text-green-300 font-semibold">
              View All Guides
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
          <div class="bg-gradient-to-r from-purple-600/20 to-pink-600/20 backdrop-blur-sm rounded-xl p-6 border border-white/10">
            <h3 class="text-2xl font-bold text-white mb-4">ðŸŽ¦ All Items</h3>
            <p class="text-white/80 mb-4">Browse our complete collection of weapons, tools, and diamonds.</p>
            <a href="/items" class="inline-flex items-center gap-2 text-purple-400 hover:text-purple-300 font-semibold">
              Browse Items
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </section>

      <!-- Beginner Tips Section -->
      <section class="w-full max-w-[1200px]">
        <div class="bg-white/5 backdrop-blur-sm rounded-xl p-8 border border-white/10">
          <h3 class="text-2xl font-bold text-white mb-4">ðŸŽ¯ New to the Game?</h3>
          <p class="text-white/80 mb-6">Start with our beginner tips to survive your first nights and build a strong foundation.</p>
          <div class="flex flex-col sm:flex-row gap-4">
            <a href="/guides/beginner-tips" class="flex items-center justify-center gap-2 bg-green-600 hover:bg-green-700 text-white font-bold px-6 py-3 rounded-lg transition-colors">
              Read Beginner Guide
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
            <a href="/generator" class="flex items-center justify-center gap-2 bg-red-600 hover:bg-red-700 text-white font-bold px-6 py-3 rounded-lg transition-colors">
              Get Starter Items
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"></path>
              </svg>
            </a>
          </div>
        </div>
      </section>
      </section>
    </div>
    <div class="absolute bottom-0 left-0 w-full h-[300px] bg-gradient-to-t from-black to-transparent"></div>
  </main>
</Layout>
