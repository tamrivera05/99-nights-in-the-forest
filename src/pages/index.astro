---
import Layout from "../layouts/Layout.astro";
import titleSvg from "../assets/Text.svg?url";

const backgroundImage = "http://localhost:3845/assets/912ea59d46c4473bae59c46701fe65cfe535cfe6.png";
const ramImage = "http://localhost:3845/assets/49c6a340f8c710a759562f6a55166435a1270f0d.png";
const vectorLeft = "http://localhost:3845/assets/94e47f1c49a2bdd056faafb03ba2e73901c9da18.svg";
const vectorRight = "http://localhost:3845/assets/c9fa7a33f92e6f9ca44c6ea8040a434758dcddee.svg";
---

<Layout
  title="99 Nights in the Forest"
  description="Claim Roblox items for survival in 99 Nights in the Forest."
  showNavigation={false}
  showFooter={false}
>
  <main class="relative flex min-h-screen justify-center bg-[linear-gradient(180deg,#000f15_0%,#000000_100%)] px-4 py-6">
    <div class="relative w-full max-w-[1440px]">
      <div
        class="absolute left-1/2 top-0 h-[1024px] w-[1536px] -translate-x-1/2 overflow-hidden blur-[4.95px]"
        aria-hidden="true"
      >
        <img src={backgroundImage} alt="" class="h-full w-full object-cover" />
        <div class="absolute inset-0 bg-black/20" />
      </div>

      <header class="relative flex h-[125px] w-full items-center justify-center bg-black/25 p-[10px] text-white shadow-[0px_5px_10.8px_rgba(0,0,0,0.25)]">
        <div class="flex w-full items-center justify-between px-[24px] py-[8px] sm:px-[48px] lg:px-[98px]">
          <div class="flex items-center gap-[32px] sm:gap-[48px]">
            <div class="relative h-[89px] w-[91.119px]">
              <img src={ramImage} alt="99 Nights in the Forest ram icon" class="absolute inset-0 h-full w-full object-cover" />
            </div>
            <img src={titleSvg} alt="99 Nights in the Forest" class="h-[70px] w-auto object-contain" />
          </div>
          <nav class="hidden items-center gap-[32px] text-[16px] font-bold tracking-[-0.32px] sm:flex lg:gap-[46px]">
            <a href="/" class="leading-[45px]">Home</a>
            <a href="/generator" class="leading-[45px]">Generator</a>
          </nav>
          <a
            href="/generator"
            class="rounded-[8px] bg-[#950606] px-4 py-2 text-[14px] font-semibold text-white shadow-[0px_5px_10.8px_rgba(0,0,0,0.25)] sm:hidden"
          >
            Get Items
          </a>
        </div>
      </header>

      <section class="relative left-[50%] top-[167px] w-[689px] -translate-x-[calc(50%-375px)] max-2xl:left-1/2 max-2xl:-translate-x-1/2 max-2xl:top-[140px] max-xl:w-[80%] max-md:static max-md:mt-[120px] max-md:flex max-md:w-full max-md:flex-col max-md:items-center">
        <div class="relative h-[746px] w-full max-md:flex max-md:h-auto max-md:flex-col max-md:items-center">
          <img
            src={vectorLeft}
            alt=""
            aria-hidden="true"
            class="absolute left-0 top-[198px] h-[408px] w-[373px] max-md:relative max-md:h-[200px] max-md:w-auto max-md:opacity-40"
          />
          <img
            src={vectorRight}
            alt=""
            aria-hidden="true"
            class="absolute left-[338px] top-[198px] h-[548px] w-[351px] max-md:relative max-md:left-0 max-md:mt-[-120px] max-md:h-[320px] max-md:w-auto max-md:opacity-40"
          />
          <img
            src={titleSvg}
            alt="99 Nights in the Forest"
            class="absolute left-[13px] top-0 h-[234px] w-[658px] object-contain max-md:relative max-md:left-0 max-md:mx-auto max-md:w-full"
          />
          <img
            src={ramImage}
            alt="Ram silhouette"
            class="absolute left-[28px] top-[151px] h-[586px] w-[636px] object-contain max-md:relative max-md:left-0 max-md:top-[40px] max-md:h-[320px] max-md:w-auto"
          />
        </div>

        <div class="absolute left-[50%] top-[746px] w-[605px] -translate-x-[calc(50%-42px)] flex flex-col items-center gap-[39px] max-xl:left-1/2 max-xl:-translate-x-1/2 max-md:static max-md:w-full max-md:px-4">
          <div class="text-center text-[24px] font-bold tracking-[-0.48px] text-white max-md:text-[20px]">
            <p class="leading-[45px]">99 Nights in the Forest Codes</p>
            <p class="leading-[45px] max-md:leading-[32px]">
              Enter your Roblox username in the Generator page
            </p>
          </div>
          <a
            href="/generator"
            class="flex h-[52px] w-[605px] items-center justify-center rounded-[8px] bg-[#950606] px-[16px] py-[14px] text-[16px] font-semibold text-white max-md:w-full"
          >
            GET FREE ITEMS
          </a>
        </div>
      </section>
    </div>
  </main>
</Layout>
