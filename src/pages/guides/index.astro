];

const breadcrumbs = [
  { name: "Home", href: "/" },
  { name: "Guides", href: "/guides" }
];

const getDifficultyColor = (difficulty) => {
  switch (difficulty) {
    case "Beginner": return "text-green-400 bg-green-600/20 border-green-500";
    case "Intermediate": return "text-yellow-400 bg-yellow-600/20 border-yellow-500";
    case "Advanced": return "text-red-400 bg-red-600/20 border-red-500";
    default: return "text-blue-400 bg-blue-600/20 border-blue-500";
  }
};

const getColorClasses = (color) => {
  const colors = {
    green: "from-green-500 to-green-600",
    blue: "from-blue-500 to-blue-600",
    purple: "from-purple-500 to-purple-600",
    orange: "from-orange-500 to-orange-600",
    red: "from-red-500 to-red-600",
    cyan: "from-cyan-500 to-cyan-600"
  };
  return colors[color] || "from-gray-500 to-gray-600";
};
