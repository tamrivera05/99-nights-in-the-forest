    name: "About - 99 Nights in the Forest Free Items",
    description: "Learn about our mission to provide free items and diamonds for 99 Nights in the Forest Roblox game",
    url: `${import.meta.env.SITE}/about`,
    mainEntity: {
      "@type": "Organization",
      name: "99 Nights in the Forest Free Items",
      description: "Providing free items, weapons, tools, and diamonds for 99 Nights in the Forest Roblox game",
      url: import.meta.env.SITE,
